{% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('styles/navbar.css') }}">
{% endblock %}


{% block navbar %}
<nav>
    <div class = "top">
        <h1>INTRACNAC</h1>
    </div>
     <ul>
        <li class="{{ app.request.attributes.get('_route') == 'app_events' ? 'active' : '' }}">
            <a href="{{ path('app_events') }}">Accueil</a>
        </li>
        <li class="{{ app.request.attributes.get('_route') == 'app_user' ? 'active' : '' }}">
            <a href="{{ path('app_user') }}">Profil</a>
        </li>
       
        {% if is_granted('ROLE_ADMIN') %}
            <li class="{{ app.request.attributes.get('_route') == 'app_admin' ? 'active' : '' }}">
                <a href="{{ path('app_admin') }}">Ticket</a>
            </li>
            <li class="{{ app.request.attributes.get('_route') == 'app_admin_chart' ? 'active' : '' }}">
                <a href="{{ path('app_admin_chart') }}">Graph</a>
            </li>
        {% elseif is_granted('ROLE_ADMIN_EVENT') %}
            <li class="{{ app.request.attributes.get('_route') in ['app_ItTicket', 'app_BuildingTicket', 'app_VehicleTicket'] ? 'active' : '' }}">
                <a href="{{ path('app_ItTicket') }}">Ticket</a>
            </li>
            <li class="{{ app.request.attributes.get('_route') == 'app_create_event' ? 'active' : '' }}">
                <a href="{{ path('app_create_event') }}">Event</a>
            </li>
        {% else %}
            <li class="{{ app.request.attributes.get('_route') in ['app_ItTicket', 'app_BuildingTicket', 'app_VehicleTicket'] ? 'active' : '' }}">
                <a href="{{ path('contact_route_name') }}">Ticket</a>
            </li>
            <li class="{{ app.request.attributes.get('_route') == 'app_contact' ? 'active' : '' }}">
                <a href="#">Contact</a>
            </li>
            
        {% endif %}
        <li>
                <a href="{{ path('app_logout') }}">Deconnexion</a>
        </li>
        
    </ul>
</nav>

{% endblock %}