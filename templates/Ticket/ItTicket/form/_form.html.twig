<div class="form__container">
    {{ form_start(ItTicketForm, { attr: { class: "form_login" }}) }}

    <div class="form__header">
        <h1 class="form__title">Soumettre un ticket</h1>
    </div>

    <div class="form__name inline_row">
        <div class="field">
            {{ form_label(ItTicketForm.title, "Titre") }}
            {{ form_widget(ItTicketForm.title, { attr: { placeholder: "Titre du ticket" }}) }}
        </div>
        <div class="field">
            {{ form_label(ItTicketForm.description, "Description") }}
            {{ form_widget(ItTicketForm.description, { attr: { placeholder: "Description" }}) }}
        </div>
    </div>

    <div class="field">
        {{ form_label(ItTicketForm.pcName, "pcName") }}
        {{ form_widget(ItTicketForm.pcName, { attr: { placeholder: "nom du pc " }}) }}
    </div>

    <div class="field">
        {{ form_label(ItTicketForm.errorCode, "Errorcode") }}
        {{ form_widget(ItTicketForm.errorCode, { attr: { placeholder: "code erreur si possible" }}) }}
    </div>

    <div class="field">
        {{ form_label(ItTicketForm.Localisation, "Localisation") }}
        {{ form_widget(ItTicketForm.Localisation, { attr: { placeholder: "Lieu ou se trouve le pc" }}) }}
    </div>

    <div class="field">
        {{ form_label(ItTicketForm.ErrorType, "type d'erreur") }}
        {{ form_widget(ItTicketForm.ErrorType, { attr: { placeholder: "type d'erreur que vous rencontrez" }}) }}
    </div>
   
    
  

    </div>

    <button type="submit" class="btn">Envoyez le ticket</button>
    {{ form_end(ItTicketForm) }}
</div>
